<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="tech.pixelw.castrender.ui.render.PlayerViewModel" />

        <import type="tech.pixelw.castrender.utils.TimeUtil" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@android:color/black"
        tools:context=".ui.render.PlayerActivity">

        <FrameLayout
            android:id="@+id/fr_play_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@android:color/holo_green_dark" />

        <!--        <com.google.android.exoplayer2.ui.PlayerView-->
        <!--            android:id="@+id/exo_player_view"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:keepScreenOn="true"-->
        <!--            app:surface_type="surface_view"-->
        <!--            app:use_controller="true" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_controls_gradient"
            android:visibility="invisible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_safezone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_b4">

            <!--            overlays: progress bar & FFWD-->

            <LinearLayout
                android:id="@+id/ll_osd_seek"
                style="@style/OSDStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_seek_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textSize="@dimen/text_size_s4"
                    tools:text="00:12:11/01:12:22" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_seek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/ll_osd_ffwd"
                style="@style/OSDStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp"
                android:visibility="invisible"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/exo_controls_fastforward" />

                <TextView
                    android:id="@+id/tv_fast_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textSize="@dimen/text_size_s5"
                    tools:text="2.0x Skipping" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_b1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_s4"
                    android:text="@{TimeUtil.toTimeString(vm.playPosition)}"
                    tools:text="00:01" />

                <ImageView
                    android:id="@+id/iv_player_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/exo_controls_pause"
                    android:visibility="gone" />
            </LinearLayout>

            <!--            controls-->

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/margin_b1"
                android:textSize="@dimen/text_size_s4"
                android:text="@{TimeUtil.toTimeString(vm.media.duration)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="17:41" />


            <TextView
                android:id="@+id/ctrl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_b1"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textSize="@dimen/text_size_s2"
                android:textStyle="bold"
                android:text="@{vm.media.title}"
                app:layout_constraintBottom_toTopOf="@id/slider"
                app:layout_constraintStart_toStartOf="@id/slider"
                tools:text="Media Title" />

            <com.google.android.material.slider.Slider
                android:valueFrom="0"
                android:valueTo="@{vm.media.durationInt()}"
                android:progress="@={vm.progressBarByMillis}"
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_min_b3"
                app:haloColor="?attr/colorOnSurface"
                app:layout_constraintBottom_toTopOf="@id/tv_duration"
                app:thumbColor="?attr/colorOnSurface"
                app:thumbRadius="6dp"
                app:trackColorActive="?attr/colorOnSurface"
                app:trackColorInactive="?attr/colorControlHighlight"
                tools:value="0.5" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>